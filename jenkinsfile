pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                // Checkout du code depuis votre référentiel git
                git 'https://github.com/Achrafkhaterchi/Demo_Vnet.git'

                // Exécution du script Python pour générer le fichier variables.tfvars
                sh 'python3 vnet/Vnet.py vnet/templates/vnet.xlsx vnet/templates/vnet.j2'

                // Si votre script génère un fichier de sortie, vous pouvez l'archiver
                archiveArtifacts 'vnet/variables.tfvars'
            }
        }

        stage('Terraform Init') {
            steps {
                // Initialisation de Terraform (nécessaire avant de planifier ou d'appliquer des modifications)
                dir('vnet/') {
                    // Initialisation de Terraform
                    sh 'terraform init'
                }
            }
        }

        stage('Terraform Plan') {
            steps {
                dir('vnet/'){
                    // Planification des modifications Terraform
                    sh 'terraform plan -var-file=vnet/variables.tfvars'
                }
            }
        }

        stage('Terraform Apply') {
            steps {
                dir('vnet/'){
                // Application des modifications Terraform
                sh 'terraform apply -auto-approve -var-file=vnet/variables.tfvars'
                }
            }
        }
    }

    post {
        success {
            echo 'La ressource est créee dans Azure avec succès !'
        }
    }
}
