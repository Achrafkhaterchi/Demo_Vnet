pipeline {
    agent any

    environment {
        TFVARS_FILE = 'vnet/variables.tfvars'
        PYTHON_SCRIPT = 'vnet/Vnet.py'
    }

    stages {
        stage('Checkout') {
            steps {

                git 'https://github.com/Achrafkhaterchi/Demo_Vnet.git'
            }
        }

        stage('Execute Python script') {
            steps {

                script {
                    bat "python $PYTHON_SCRIPT"
                }
            }
        }

        stage('Terraform plan') {
            steps {

                bat 'terraform init'

                bat 'terraform plan -var-file=$TFVARS_FILE'
            }
        }

        stage('Terraform apply') {
            steps {

                bat 'terraform apply -var-file=$TFVARS_FILE -auto-approve'
            }
        }
    }
}




