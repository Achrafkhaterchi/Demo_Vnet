pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Checkout du code depuis GitHub
                git 'https://github.com/Achrafkhaterchi/Demo_Vnet.git'
            }
        }
        stage('Build Docker Image') {
            steps {
                // Construction de l'image Docker
                script {
                    docker.build('VnetImg')
                }
            }
        }
        stage('Run Docker Container') {
            steps {
                // Exécution du conteneur Docker en utilisant l'image construite précédemment
                script {
                    docker.image('vnetimg').run()
                }
            }
        }
        stage('Execute Python Script') {
            steps {
                // Exécution du script Python à l'intérieur du conteneur Docker
                script {
                    docker.image('vnetimg').inside {
                        bat 'python vnet.py'
                    }
                }
            }
        }
        stage('Deploy with Terraform') {
            steps {
                // Exécution des commandes Terraform à l'intérieur du conteneur Docker
                script {
                    docker.image('vnetimg').inside {
                        bat 'terraform init vnet/'
                        bat 'terraform plan -var-file=vnet/variables.tfvars vnet/'
                        bat 'terraform apply -var-file=vnet/variables.tfvars vnet/'
                    }
                }
            }
        }
    }
}

